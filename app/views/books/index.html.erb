<%= render "users/list",user:@user,book:@book %>

<h2>Books</h2>
<div class="col-xs-9">
<table class="table table-striped">
  <tr>
  	<th>
    </th>
  	<th>Title</th>
  	<th>Opinion</th>
  </tr>
  <tr>
    <% @books.each do |book| %>
  	  <td>
         <%= link_to user_path(book.user.id) do %><% attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %><% end %>
      </td>
      <td>
       <%= link_to book.title ,book_path(book.id) %>
      </td>
      <td>
      	<%= book.body %>
      </td>
      <td>
        <%= link_to "#{book.post_comments.count}コメント",book_path(book.id) %>
      </td>

      <td>
         <%= book.favorites.count %> いいね
      </td>
  	</tr>
<% end %>
</table>
</div>