<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<% if book.errors.any? %>
  <div id="error_explanation">
    <h2><%= book.errors.count %>errors prohibited this obj from being saved:</h2>
 
     <ul>
    <% book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
<div class="row">
<div class="col-xs-3">
<table class="table table-striped">
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %>
<tr>
<th>
<h4>Name</h4>
</th>
<th>
<%= user.name %>
</th>
</tr>
<tr>
<th>
<h4>Introduction</h4>
</th>
<th>
<%= user.introduction %>
</th>
</tr>
<tr>
<% if user == current_user %>

<tr><th>
<%= link_to "",edit_user_path(@user.id),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_10783" %>
</th></tr>
<% else %>
<tr><th>
<%= link_to "",users_path,class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_10783"  %>
</th></tr>
<% end %>
</table>


<h2>New book</h2>
<%= form_for(book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
   <p><%= f.submit 'Create Book',class:"btn btn-primary col-xs-12" %></p>
 
<% end %>
</div>