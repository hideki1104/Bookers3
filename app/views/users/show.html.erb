<%= render "users/list",user:@user,book:@book %>

<h2>Books</h2>

<div class="container">
<div class="row">
<div class="col-xs-9">
<table class="table table-striped">
  <thead>
    <th></th>
  	<th>Title</th>
  	<th>Body</th>
  </thead>
  <% @books.each do |book| %>
  	<tr>
      <td>
        <%= attachment_image_tag  @user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %>
      </td>
      <td>
      <%= link_to book.title,book_path(book.id) %>
      </td>
      <td>
        <%= book.body %>
      </td>
  	</tr>
<% end %>
</table>
</div>
</div>
</div>