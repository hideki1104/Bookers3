<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/34ad885584.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


<div id="container">
  <div id="theTarget">
    <div class="image1"></div>
    <div class="image2"></div>
    <div class="image3"></div>
    <div class="image4"></div>
    <div class="image5"></div>
  </div>
</div>

  <header>
  <nav>
  <h4>Bookers</h4>
  <% if user_signed_in? %>
  <div class="nav-item">
  <ul>
  <li><%= link_to "Home",user_path(current_user.id),class: "glyphicon glyphicon-home" %> </li>
  <li><%= link_to "Users",users_path,class: "glyphicon glyphicon-user" %></li>
  <li></span><%= link_to "Books",books_path,class: "glyphicon glyphicon-book" %></li>
  <li><%= link_to "logout", destroy_user_session_path, method: :delete,class: "glyphicon glyphicon-log-out" %></li></div>

  <% else %>
  <div class="nav-item">
  <li><%= link_to "Home" ,root_path,class: "glyphicon glyphicon-home" %></li>
  <li><%= link_to "About" ,"home/about",class: "glyphicon glyphicon-link" %></li>
  <li><%= link_to "Sign up", new_user_registration_path,class: "glyphicon glyphicon-edit" %></li>
  <li><%= link_to "login", new_user_session_path,class: "glyphicon glyphicon-log-in" %></li></div>
  <% end %>
</nav>
</header>
<main>
    <%= yield %>
</main>

<footer>
  <div class="container">
  <div class="row">
  <div class="col-xs-3 col-xs-offset-9">
  <p>CopyRight Infratop.inc</p>
</div>
</div>
</div>
</footer>
  </body>
</html>
